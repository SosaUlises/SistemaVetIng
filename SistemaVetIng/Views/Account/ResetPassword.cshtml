@model SistemaVetIng.ViewsModels.CambiarContraseñaViewModel

@{
    ViewData["Title"] = "Restablecer Contraseña - VetIng";
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="icon" type="image/png" href="/css/imagenes/icon.png" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/portal-theme.css" asp-append-version="true" />
</head>

<body class="auth-body">

    <div class="auth-card">

        <div class="auth-visual" style="background-image: url('@Url.Content("~/css/imagenes/form8.jpg")');">
        </div>

        <div class="auth-form-container">

            <div style="text-align:center; margin-bottom:30px;">
                <div class="dash-title">
                    <h1 style="font-size:2rem;">Nueva <span>Contraseña</span></h1>
                </div>
                <p class="auth-subtitle" style="color:var(--text-muted);">
                    Crea una contraseña segura para recuperar tu acceso.
                </p>
            </div>

            <form asp-action="ResetPassword" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger" style="margin-bottom:20px; text-align:center;"></div>

                <input type="hidden" asp-for="Code" />
                <input type="hidden" asp-for="Email" />

                <div class="form-group" style="margin-bottom:20px;">
                    <label asp-for="Email" class="form-label">Correo Electrónico</label>
                    <div style="position:relative;">
                        <i class="fa-solid fa-envelope" style="position:absolute; left:15px; top:50%; transform:translateY(-50%); color:var(--text-muted);"></i>
                        <input asp-for="Email" class="form-control" readonly style="padding-left:40px; background:rgba(0,0,0,0.2); cursor:default;" />
                    </div>
                </div>

                <div class="form-group" style="margin-bottom:20px;">
                    <label asp-for="Password" class="form-label">Nueva Contraseña</label>
                    <div style="position:relative;">
                        <i class="fa-solid fa-key" style="position:absolute; left:15px; top:50%; transform:translateY(-50%); color:var(--primary-color);"></i>
                        <input asp-for="Password" class="form-control" type="password" placeholder="Mínimo 8 caracteres" style="padding-left:40px;" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group" style="margin-bottom:30px;">
                    <label asp-for="ConfirmPassword" class="form-label">Confirmar Contraseña</label>
                    <div style="position:relative;">
                        <i class="fa-solid fa-check-double" style="position:absolute; left:15px; top:50%; transform:translateY(-50%); color:var(--success-color);"></i>
                        <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Repite la contraseña" style="padding-left:40px;" />
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary btn-register-submit">
               Restablecer
                </button>

                <div class="auth-footer-links">
                    <a asp-action="Login" class="link-animated secondary">
                        <i class="fa-solid fa-arrow-left"></i> Volver al inicio de sesión
                    </a>
                </div>

            </form>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    @await Component.InvokeAsync("NToastNotify")

</body>
</html>