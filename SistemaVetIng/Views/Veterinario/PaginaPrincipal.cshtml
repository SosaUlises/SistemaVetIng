        @if (esVeterinaria || (await AuthorizationService.AuthorizeAsync(User, Permission.Vacuna.View)).Succeeded
        || (await AuthorizationService.AuthorizeAsync(User, Permission.Estudio.View)).Succeeded
        || (await AuthorizationService.AuthorizeAsync(User, Permission.Auditoria.View)).Succeeded
        || (await AuthorizationService.AuthorizeAsync(User, Permission.Dashboard.View)).Succeeded
        )
        {
            <section id="catalogos" class="mb-50">
                <div class="section-header">
                    <h2 class="section-heading">Servicios y Control</h2>
                </div>

                <div class="catalogs-grid">

                    @if (esVeterinaria || (await AuthorizationService.AuthorizeAsync(User, Permission.Vacuna.View)).Succeeded)
                    {
                        <div class="stat-card catalog-card">
                            <div class="stat-icon"><i class="fa-solid fa-syringe"></i></div>
                            <h3 class="catalog-title">Vacunas</h3>
                            @if (esVeterinaria || (await AuthorizationService.AuthorizeAsync(User, Permission.Vacuna.Create)).Succeeded)
                            {
                                <a asp-controller="Vacuna" asp-action="Index" class="btn btn-outline btn-sm">Gestionar</a>
                            }
                        </div>
                    }

                    @if (esVeterinaria || (await AuthorizationService.AuthorizeAsync(User, Permission.Estudio.View)).Succeeded)
