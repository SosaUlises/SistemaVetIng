            @if (esVeterinaria || (await AuthorizationService.AuthorizeAsync(User, Permission.Administration.ViewUsers)).Succeeded)
            {
                <a asp-controller="Veterinaria" asp-action="GestionPermissionsUsuario" class="btn btn-outline btn-sm">
