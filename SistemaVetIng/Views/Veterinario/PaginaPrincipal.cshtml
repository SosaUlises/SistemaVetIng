@using X.PagedList.Mvc.Core
@model SistemaVetIng.ViewsModels.VeterinarioPaginaPrincipalViewModel
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService
@inject IHttpContextAccessor HttpContextAccessor
@using SistemaVetIng.Models.Extension
@using System.Globalization

@{
    ViewData["Title"] = "Panel Veterinario - VetIng";
    Layout = null;
    var esVeterinaria = User.IsInRole("Veterinaria");
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/portal-theme.css" asp-append-version="true" />
</head>

<body>
    <header class="main-header">
        <a href="/Veterinario/PaginaPrincipal" class="logo">
            <i class="fa-solid fa-paw"></i> VetIng
        </a>

        <nav class="main-nav">
            <ul class="nav-list" id="navMenu">
                <li><a class="nav-link" asp-controller="Perfil" asp-action="Index">Perfil</a></li>
                <li><a class="nav-link" href="#turnos-hoy">Agenda</a></li>
                <li><a class="nav-link" href="#clientes">Pacientes</a></li>
                <li>
                    <form asp-controller="Account" asp-action="Logout" method="post">
                        <button type="submit" class="btn-logout">
                            <i class="fa-solid fa-right-from-bracket"></i> Salir
                        </button>
                    </form>
                </li>
            </ul>
        </nav>
        
        <div class="hamburger-menu" id="hamburgerBtn">
            <i class="fa-solid fa-bars"></i>
        </div>
    </header>

    <main class="main-content">

        <section class="dash-hero">
            <div class="dash-title">
                <h1>Bienvenido @Model.Nombre <br><span>Panel Veterinario</span></h1>
                <p class="dash-subtitle">Gestión clínica, agenda diaria y administración de pacientes.</p>
            </div>
            
            @if ((await AuthorizationService.AuthorizeAsync(User, Permission.Atenciones.Create)).Succeeded)
            {
                <div class="dash-actions">
                    <a asp-controller="HistoriaClinica" asp-action="BuscarClienteParaSeguimiento" class="btn btn-primary">
                        <i class="fa-solid fa-notes-medical"></i> Nueva Atencion Veterinaria
                    </a>
                </div>
            }
        </section>

        <section id="resumen" class="stats-grid">
            <div class="stat-card">
                <div class="stat-icon"><i class="fa-regular fa-calendar-days"></i></div>
                <div class="stat-value">@Model.CantidadCitasHoy</div>
                <div class="stat-label">Citas para Hoy</div>
            </div>
            
            <div class="stat-card">
                <div class="stat-icon icon-coral"><i class="fa-solid fa-stethoscope"></i></div>
                <div class="stat-value">@Model.CantidadAtencionesPorVeterinario</div>
                <div class="stat-label">Atenciones Totales</div>
            </div>
            
            <div class="stat-card">
                <div class="stat-icon icon-green"><i class="fa-solid fa-paw"></i></div>
                <div class="stat-value" style="font-size:1.5rem;">
                    @(Model.MascotaMasFrecuentePorVeterinario?.Nombre ?? "N/A")
                </div>
                <div class="stat-label">
                    @(Model.MascotaMasFrecuentePorVeterinario != null ? $"{Model.MascotaMasFrecuentePorVeterinario.Especie} - Mascota mas frecuente" : "Sin datos")
                </div>
            </div>
        </section>

       

       @if (HttpContextAccessor.HttpContext.User.HasPermission(Permission.Turnos.View))
        {
            <section id="turnos-hoy" style="margin-bottom: 50px;">
                <div class="section-header">
                    <h2 class="section-heading">Agenda del Día @DateTime.Today.ToString("dd/MM/yy")</h2>
                    <a asp-controller="Turno" asp-action="TurnosPorDiaSeleccionado" class="btn btn-outline btn-sm">
                        <i class="fa-solid fa-calendar-week"></i> Ver Agenda Completa
                    </a> 
                </div>

                <div class="list-container">
                    @if (Model.CitasDeHoy.Any())
                    {
                        foreach (var turno in Model.CitasDeHoy)
                        {
                            <div class="list-item">
                                <div style="display:flex; align-items:center; gap:20px;">
         
                                    <div class="time-block">
                                        <div class="time-hour">@turno.Horario.ToString(@"hh\:mm")</div>
                                        <div class="time-label">HS</div>
                                    </div>

                                    <div class="item-info">
                   
                                        <div class="appointment-title">
                                            @(turno.NombreMascota ?? "Primera Cita")
                                            @if (turno.PrimeraCita) 
                                            { 
                                                <span class="badge-new">Nueva</span> 
                                            }
                                        </div>
                                        
               
                                        <div class="appointment-meta">
                                            <i class="fa-solid fa-user" style="color:var(--primary-color);"></i> @turno.NombreCliente
                                            &nbsp;|&nbsp; 
                                            <span>
                                                @(string.IsNullOrWhiteSpace(turno.Motivo) ? "No especificó motivo" : turno.Motivo)
                                            </span>
                                        </div>
                                    </div>
                                </div>

                         
                                <div class="action-buttons">
                                    <span class="badge @(turno.Estado == "Finalizado" ? "badge-success" : (turno.Estado == "Pendiente" ? "badge-pending" : "badge-error"))">
                                        @turno.Estado
                                    </span>

                                    @if (turno.Estado == "Pendiente")
                                    {
                                   
                                        <a asp-controller="AtencionVeterinaria" asp-action="RegistrarAtencionConTurno" asp-route-turnoId="@turno.Id" class="btn btn-primary btn-sm">
                                            <i class="fa-solid fa-clipboard-check"></i> Atender
                                        </a>
                                        
                          
                                        @if (HttpContextAccessor.HttpContext.User.HasPermission(Permission.Turnos.Cancel))
                                        {
                                            <form asp-controller="Turno" asp-action="CancelarTurnoAdmin" method="post" onsubmit="return confirm('¿Cancelar turno?');">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="turnoId" value="@turno.Id" />
                                                <button type="submit" class="btn-cancel" title="Cancelar">
                                                    <i class="fas fa-times"></i>
                                                </button>
                                            </form>
                                        }
                                        
                                    
                                        <form asp-controller="Turno" asp-action="MarcarNoAsistio" method="post" onsubmit="return confirm('¿Marcar ausente?');">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="turnoId" value="@turno.Id" />
                                            <button type="submit" class="btn-absent" title="Marcar Ausente">
                                                <i class="fas fa-user-slash"></i>
                                            </button>
                                        </form>
                                    }
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="empty-state-container">
                            <i class="fa-solid fa-mug-hot empty-icon"></i>
                            <p>No hay citas programadas para hoy.</p>
                        </div>
                    }
                </div>
            </section>
        }
    

       @if (HttpContextAccessor.HttpContext.User.HasPermission(Permission.Cliente.View))
{
    <section id="clientes" class="mb-50">
        <div class="section-header">
            <h2 class="section-heading">Gestión de Clientes</h2>
            
            <div class="d-flex gap-10">
                @if (HttpContextAccessor.HttpContext.User.HasPermission(Permission.Cliente.Create))
                {
                    <a asp-controller="Cliente" asp-action="RegistrarCliente" class="btn btn-primary btn-sm">
                        <i class="fa-solid fa-plus"></i> Nuevo
                    </a>
                }
                
                <form asp-controller="Veterinario" asp-action="PaginaPrincipal" method="get" class="search-box">
                    <i class="fa-solid fa-search search-icon"></i>
                    <input type="text" name="busquedaCliente" class="search-input" placeholder="Buscar cliente..." value="@Context.Request.Query["busquedaCliente"]" />
                </form>
            </div>
        </div>

        <div class="list-container">
            @if (Model.Clientes != null && Model.Clientes.Any())
            {
                foreach (var cliente in Model.Clientes)
                {
                    <div class="list-item">
                        <div class="d-flex align-center gap-15">
                            <div class="avatar-circle">
                                @(cliente.NombreCompleto.Split(' ').FirstOrDefault()?.FirstOrDefault())@(cliente.NombreCompleto.Split(' ').LastOrDefault()?.FirstOrDefault())
                            </div>
                            
                            <div class="item-info">
                                <h4>@cliente.NombreCompleto</h4>
                                <p>
                                DNI: @cliente.DNI 
                                &bull; <i class="fa-solid fa-phone icon-text"></i> @cliente.Telefono 
                                &bull; <i class="fa-solid fa-envelope icon-text"></i> @cliente.NombreUsuario
                                </p>
                            </div>
                        </div>
                        
                        <div class="d-flex gap-10">
                            @if (HttpContextAccessor.HttpContext.User.HasPermission(Permission.Cliente.Edit))
                            {
                                <a asp-controller="Cliente" asp-action="ModificarCliente" asp-route-id="@cliente.Id" class="btn btn-outline btn-sm" title="Editar">
                                    <i class="fa-solid fa-pen"></i>
                                </a>
                            }
                            @if (HttpContextAccessor.HttpContext.User.HasPermission(Permission.Cliente.Delete))
                            {
                                <form asp-controller="Cliente" asp-action="EliminarCliente" asp-route-id="@cliente.Id" method="post" onsubmit="return confirm('¿Eliminar cliente?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-outline btn-sm" style="border-color:var(--error-color); color:var(--error-color);" title="Eliminar">
                                        <i class="fa-solid fa-trash"></i>
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="empty-state-container">
                    <p>No se encontraron clientes.</p>
                </div>
            }

            <div class="pagination-wrapper">
                @if (Model.PaginacionClientes != null && Model.PaginacionClientes.PageCount > 1)
                {
                    @Html.PagedListPager(Model.PaginacionClientes, page => Url.Action("PaginaPrincipal", "Veterinario",
                        new { page, busquedaCliente = Context.Request.Query["busquedaCliente"] }),
                        new PagedListRenderOptions {
                            LiElementClasses = new string[] { "page-item" },
                            PageClasses = new string[] { "page-link" },
                            ContainerDivClasses = new[] { "pagination" },
                            DisplayLinkToFirstPage = PagedListDisplayMode.Never,
                            DisplayLinkToLastPage = PagedListDisplayMode.Never
                        })
                }
            </div>
        </div>
    </section>
}

       @if (HttpContextAccessor.HttpContext.User.HasPermission(Permission.Mascota.View))
{
    <section id="mascotas" class="mb-50">
        <div class="section-header">
            <h2 class="section-heading">Registro de Mascotas</h2>
            
            <div class="d-flex gap-10">
                @if (HttpContextAccessor.HttpContext.User.HasPermission(Permission.Mascota.Create))
                {
                    <a asp-controller="Mascota" asp-action="RegistrarMascota" class="btn btn-primary btn-sm">
                        <i class="fa-solid fa-plus"></i> Nueva
                    </a>
                }
                
                <form asp-controller="Veterinario" asp-action="PaginaPrincipal" method="get" class="search-box">
                    <i class="fa-solid fa-search search-icon"></i>
                    <input type="text" name="busquedaMascota" class="search-input" placeholder="Buscar mascota..." value="@Context.Request.Query["busquedaMascota"]" />
                </form>
            </div>
        </div>

        <div class="list-container">
            @if (Model.Mascotas != null && Model.Mascotas.Any())
            {
                foreach (var mascota in Model.Mascotas)
                {
                    <div class="list-item">
                        <div class="d-flex align-center gap-15">
                            <div class="pet-icon-circle">
                                @if (mascota.Especie.ToLower().Contains("canino") || mascota.Especie.ToLower().Contains("perro")) {
                                    <i class="fa-solid fa-dog"></i>
                                } else if (mascota.Especie.ToLower().Contains("felino") || mascota.Especie.ToLower().Contains("gato")) {
                                    <i class="fa-solid fa-cat"></i>
                                } else {
                                    <i class="fa-solid fa-paw"></i>
                                }
                            </div>
                            
                            <div class="item-info">
                                <h4>@mascota.NombreMascota</h4>
                                <p>@mascota.Raza (@mascota.Sexo) &bull; Dueño: @mascota.NombreDueno</p>
                            </div>
                        </div>

                        <div class="actions-container">
                          <a asp-controller="HistoriaClinica" asp-action="DetalleHistoriaClinica" asp-route-mascotaId="@mascota.Id" class="btn btn-outline-green btn-sm" title="Historia Clínica">
                          <i class="fa-solid fa-file-medical"></i>
                          </a>
                            
                            @if (HttpContextAccessor.HttpContext.User.HasPermission(Permission.Mascota.Edit))
                            {
                                <a asp-controller="Mascota" asp-action="ModificarMascota" asp-route-id="@mascota.Id" class="btn btn-outline btn-sm" title="Editar">
                                    <i class="fa-solid fa-pen"></i>
                                </a>
                            }
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="empty-state-container">
                    <p>
                        @if (!string.IsNullOrEmpty(Context.Request.Query["busquedaMascota"]))
                        {
                            <span>No se encontraron mascotas para "@Context.Request.Query["busquedaMascota"]".</span>
                        }
                        else
                        {
                            <span>No hay mascotas registradas.</span>
                        }
                    </p>
                </div>
            }

            <div class="pagination-wrapper">
                @if (Model.PaginacionMascotas != null && Model.PaginacionMascotas.PageCount > 1)
                {
                    @Html.PagedListPager(Model.PaginacionMascotas, pageMascota => Url.Action("PaginaPrincipal", "Veterinario",
                        new { 
                            page = Context.Request.Query["page"], 
                            busquedaCliente = Context.Request.Query["busquedaCliente"],
                            pageMascota,
                            busquedaMascota = Context.Request.Query["busquedaMascota"] 
                        }),
                        new PagedListRenderOptions {
                            LiElementClasses = new string[] { "page-item" },
                            PageClasses = new string[] { "page-link" },
                            ContainerDivClasses = new[] { "pagination" },
                            DisplayLinkToFirstPage = PagedListDisplayMode.Never,
                            DisplayLinkToLastPage = PagedListDisplayMode.Never
                        })
                }
                else if(Model.PaginacionMascotas != null)
                {
                     <p class="text-muted text-center" style="margin:0; font-size:0.9rem; color:white">
                        Mostrando @Model.PaginacionMascotas.TotalItemCount @(Model.PaginacionMascotas.TotalItemCount == 1 ? "mascota" : "mascotas")
                     </p>
                }
            </div>
        </div>
    </section>
}

