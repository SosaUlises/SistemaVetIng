@model SistemaVetIng.ViewsModels.AtencionVeterinariaViewModel

@{
    ViewData["Title"] = $"Nueva Atención - {Model.MascotaNombre}";
    Layout = null;

    string controllerDestino = User.IsInRole("Veterinario") ? "Veterinario" : "Veterinaria";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="icon" type="image/png" href="/css/imagenes/icon.png" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/portal-theme.css" asp-append-version="true" />
</head>
<body>

    <header class="main-header">
        <a href="../@controllerDestino/PaginaPrincipal" class="logo">
            <i class="fa-solid fa-paw"></i> VetIng
        </a>
        <nav class="main-nav">
            <ul class="nav-list" id="navMenu">
                <li>
                    <a asp-controller="HistoriaClinica" asp-action="DetalleHistoriaClinica" asp-route-mascotaId="@Model.MascotaId" class="nav-link">
                        Volver a Historia
                    </a>
                </li>
                <li>
                    <form asp-controller="Account" asp-action="Logout" method="post">
                        <button type="submit" class="btn-logout">
                            <i class="fa-solid fa-right-from-bracket"></i> Salir
                        </button>
                    </form>
                </li>
            </ul>
        </nav>
        <div class="hamburger-menu" id="hamburgerBtn">
            <i class="fa-solid fa-bars"></i>
        </div>
    </header>

    <main class="main-content">

        <div class="dash-hero">
            <div class="dash-title">
                <h1>Nueva <span>Atención</span></h1>
                <p class="dash-subtitle">
                    Paciente: <strong>@Model.MascotaNombre</strong> &bull; Propietario: <strong>@Model.PropietarioNombre</strong>
                </p>
            </div>
        </div>

        <section class="booking-container" style="max-width: 800px;">
            <form asp-action="RegistrarAtencion" asp-controller="AtencionVeterinaria" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="HistoriaClinicaId" />

                <div class="form-group" style="margin-bottom:20px;">
                    <label asp-for="Diagnostico" class="form-label">Diagnóstico</label>
                    <textarea asp-for="Diagnostico" class="form-control" rows="3" placeholder="Descripción detallada..."></textarea>
                    <span asp-validation-for="Diagnostico" class="text-danger"></span>
                </div>

                <div class="form-group" style="margin-bottom:20px;">
                    <label asp-for="PesoKg" class="form-label">Peso (Kg)</label>
                    <input asp-for="PesoKg" class="form-control" type="number" step="0.01" placeholder="Ej: 12.5" />
                    <span asp-validation-for="PesoKg" class="text-danger"></span>
                </div>

                <h4 class="form-section-title">
                    <span><i class="fa-solid fa-pills"></i> Tratamiento</span>
                </h4>
                

                <div style="display:grid; grid-template-columns: 1fr 1fr; gap:20px;">
                    <div class="form-group">
                        <label asp-for="Medicamento" class="form-label">Medicamento</label>
                        <input asp-for="Medicamento" class="form-control" placeholder="Nombre droga/comercial" />
                        <span asp-validation-for="Medicamento" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Dosis" class="form-label">Dosis</label>
                        <input asp-for="Dosis" class="form-control" placeholder="Ej: 5ml o 1 comp." />
                        <span asp-validation-for="Dosis" class="text-danger"></span>
                    </div>
                </div>

                <div style="display:grid; grid-template-columns: 1fr 1fr; gap:20px; margin-top:15px;">
                    <div class="form-group">
                        <label asp-for="Frecuencia" class="form-label">Frecuencia</label>
                        <input asp-for="Frecuencia" class="form-control" placeholder="Ej: Cada 8hs" />
                        <span asp-validation-for="Frecuencia" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DuracionDias" class="form-label">Duración (Días)</label>
                        <input asp-for="DuracionDias" class="form-control" type="number" placeholder="Cant. días" />
                        <span asp-validation-for="DuracionDias" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group" style="margin-top:20px;">
                    <label asp-for="ObservacionesTratamiento" class="form-label">Observaciones</label>
                    <textarea asp-for="ObservacionesTratamiento" class="form-control" rows="2" placeholder="Indicaciones adicionales..."></textarea>
                    <span asp-validation-for="ObservacionesTratamiento" class="text-danger"></span>
                </div>

                <h4 class="form-section-title">
                    <span><i class="fa-solid fa-syringe"></i> Vacunas</span>
                    <button type="button" id="add-vacuna-btn" class="btn btn-outline btn-sm">
                        <i class="fas fa-plus"></i> Agregar
                    </button>
                </h4>
                <div id="vacunas-container"></div>

                <h4 class="form-section-title">
                    <span><i class="fa-solid fa-microscope"></i> Estudios</span>
                    <button type="button" id="add-estudio-btn" class="btn btn-outline btn-sm">
                        <i class="fas fa-plus"></i> Agregar
                    </button>
                </h4>
                <div id="estudios-container"></div>

                <div class="form-actions" style="margin-top:40px; display:flex; gap:15px; justify-content:flex-end;">
                    <a asp-controller="HistoriaClinica" asp-action="DetalleHistoriaClinica" asp-route-mascotaId="@Model.MascotaId" class="btn btn-outline">
                        Cancelar
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Guardar Atención
                    </button>
                </div>
            </form>
        </section>
    </main>

    <footer class="main-footer">
        <div class="footer-col footer-info">
            <div class="footer-logo-container">
                <div class="footer-logo-icon"><i class="fa-solid fa-paw"></i></div>
                <h3 class="footer-brand">VetIng</h3>
            </div>
            <p class="footer-description">
                Portal exclusivo para el personal médico. Gestión eficiente de pacientes y turnos.
            </p>
        </div>

        <div class="footer-col">
            <h4 class="footer-heading">Navegacion</h4>
            <ul class="footer-links">
                <li><a href="/@controllerDestino/PaginaPrincipal">Volver al inicio</a></li>
            </ul>
        </div>

        <div class="footer-col">
            <h4 class="footer-heading">Soporte Técnico</h4>
            <ul class="footer-links">
                <li><a href="mailto:admin@veting.com">Contactar Admin</a></li>
                <li>
                    <form asp-controller="Account" asp-action="Logout" method="post" style="display:inline;">
                        <button type="submit" style="background:none; border:none; color:rgba(255,255,255,0.7); cursor:pointer; font-family:inherit; font-size:0.95em; padding:0; text-decoration:underline;">
                            Cerrar Sesión
                        </button>
                    </form>
                </li>
            </ul>
        </div>

        <div class="footer-bottom">
            <p>&copy; @DateTime.Now.Year VetIng Software. Desarrollado por Ulises Sosa y Leonel Gallaretto.</p>
        </div>
    </footer>

    <template id="vacuna-template">
        <div class="dynamic-item v1-input-dynamic-group">
            <i class="fa-solid fa-syringe" style="color:var(--text-muted);"></i>
            <select class="form-control" required>
                <option value="">Seleccione Vacuna</option>
                @foreach (var vacuna in Model.VacunasDisponibles!)
                {
                    <option value="@vacuna.Value">@vacuna.Text</option>
                }
            </select>

            <button type="button" class="btn-remove-item v1-btn-remove">
                <i class="fas fa-trash"></i>
            </button>
        </div>
    </template>

    <template id="estudio-template">
        <div class="dynamic-item v1-input-dynamic-group">
            <i class="fa-solid fa-microscope" style="color:var(--text-muted);"></i>
            <select class="form-control" required>
                <option value="">Seleccione Estudio</option>
                @foreach (var estudio in Model.EstudiosDisponibles!)
                {
                    <option value="@estudio.Value">@estudio.Text</option>
                }
            </select>

            <button type="button" class="btn-remove-item v1-btn-remove">
                <i class="fas fa-trash"></i>
            </button>
        </div>
    </template>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/atencionVeterinaria.js" asp-append-version="true"></script>
    <script src="~/js/menuhamburguesa.js" asp-append-version="true"></script>

    @await Component.InvokeAsync("NToastNotify")

    <script>
        // Menu hamburguesa
        const burger = document.getElementById('hamburgerBtn');
        const nav = document.getElementById('navMenu');
        if(burger && nav){
            burger.addEventListener('click', () => nav.classList.toggle('active'));
        }
    </script>
</body>
</html>