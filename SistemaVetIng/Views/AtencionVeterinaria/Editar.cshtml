@model SistemaVetIng.ViewsModels.AtencionVeterinariaViewModel

@{
    ViewData["Title"] = "Editar Atención";
    Layout = null;
    string controllerDestino = User.IsInRole("Veterinario") ? "Veterinario" : "Veterinaria";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/portal-theme.css" asp-append-version="true" />
</head>
<body>

    <header class="main-header">
        <a href="#" class="logo">
            <i class="fa-solid fa-paw"></i> VetIng
        </a>
        <nav class="main-nav">
            <ul class="nav-list" id="navMenu">
                <li><a class="nav-link" href="/@controllerDestino/PaginaPrincipal">Volver al Inicio</a></li>
                <li>
                    <form asp-controller="Account" asp-action="Logout" method="post">
                        <button type="submit" class="btn-logout">
                            <i class="fa-solid fa-right-from-bracket"></i> Salir
                        </button>
                    </form>
                </li>
            </ul>
        </nav>
        <div class="hamburger-menu" id="hamburgerBtn">
            <i class="fa-solid fa-bars"></i>
        </div>
    </header>

    <main class="main-content">

        <section class="dash-hero">
            <div class="dash-title">
                <h1>Editar <span>Atención</span></h1>
            </div>
            <div class="dash-actions">
                <a asp-action="Historial" asp-route-id="@Model.Id" class="btn btn-outline" target="_blank">
                    <i class="fa-solid fa-clock-rotate-left"></i> Ver Historial de Cambios
                </a>
            </div>
        </section>

        <section class="booking-container" style="max-width: 900px;">

            <div class="audit-alert">
                <i class="fa-solid fa-triangle-exclamation audit-icon"></i>
                <div class="audit-content">
                    <strong>Modo Edición y Auditoría</strong>
                    Al guardar los cambios, el sistema generará automáticamente una copia de seguridad de la versión anterior.
                </div>
            </div>

            <form asp-action="Editar" method="post">
                <div asp-validation-summary="All" class="text-danger" style="margin-bottom:20px;"></div>

                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="HistoriaClinicaId" />
                <input type="hidden" asp-for="VeterinarioId" />
                <input type="hidden" asp-for="MascotaId" />

                <div style="display:grid; grid-template-columns: repeat(auto-fit, minmax(350px, 1fr)); gap:40px;">

                    <div>
                        <h4 class="edit-section-title">Datos Clínicos</h4>

                        <div class="form-group" style="margin-bottom:20px;">
                            <label asp-for="Diagnostico" class="form-label">Diagnóstico</label>
                            <textarea asp-for="Diagnostico" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="Diagnostico" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="PesoKg" class="form-label">Peso (kg)</label>
                            <input asp-for="PesoKg" class="form-control" type="number" step="0.1" />
                            <span asp-validation-for="PesoKg" class="text-danger"></span>
                        </div>
                    </div>

                    <div>
                        <h4 class="edit-section-title">Tratamiento</h4>

                        <div class="form-group" style="margin-bottom:20px;">
                            <label asp-for="Medicamento" class="form-label">Medicamento</label>
                            <input asp-for="Medicamento" class="form-control" />
                            <span asp-validation-for="Medicamento" class="text-danger"></span>
                        </div>

                        <div style="display:grid; grid-template-columns: 1fr 1fr; gap:15px; margin-bottom:20px;">
                            <div class="form-group">
                                <label asp-for="Dosis" class="form-label">Dosis</label>
                                <input asp-for="Dosis" class="form-control" />
                                <span asp-validation-for="Dosis" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Frecuencia" class="form-label">Frecuencia</label>
                                <input asp-for="Frecuencia" class="form-control" />
                                <span asp-validation-for="Frecuencia" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group" style="margin-bottom:20px;">
                            <label asp-for="DuracionDias" class="form-label">Duración (días)</label>
                            <input asp-for="DuracionDias" class="form-control" />
                            <span asp-validation-for="DuracionDias" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="ObservacionesTratamiento" class="form-label">Observaciones</label>
                            <textarea asp-for="ObservacionesTratamiento" class="form-control" rows="2"></textarea>
                            <span asp-validation-for="ObservacionesTratamiento" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div style="margin-top:40px;">
                    <h4 class="edit-section-title">Servicios Adicionales</h4>

                    <div style="display:grid; grid-template-columns: repeat(auto-fit, minmax(350px, 1fr)); gap:40px;">
                        <div>
                            <label class="form-label" style="color:var(--primary-color);">Vacunas Aplicadas</label>

                            <div id="vacunas-container">
                                @if (Model.VacunasSeleccionadasIds != null)
                                {
                                    foreach (var idSeleccionado in Model.VacunasSeleccionadasIds)
                                    {
                                        <div class="dynamic-item v1-input-dynamic-group row-item">
                                            <select name="VacunasSeleccionadasIds" class="form-control">
                                                @if (Model.VacunasDisponibles != null)
                                                {
                                                    foreach (var item in Model.VacunasDisponibles)
                                                    {
                                                        if (item.Value == idSeleccionado.ToString())
                                                        {
                                                            <option value="@item.Value" selected>@item.Text</option>
                                                        }
                                                        else
                                                        {
                                                            <option value="@item.Value">@item.Text</option>
                                                        }
                                                    }
                                                }
                                            </select>
                                            <button type="button" class="btn-remove-item v1-btn-remove" onclick="eliminarFila(this)">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    }
                                }
                            </div>

                            <button type="button" id="btn-add-vacuna" class="btn btn-outline btn-sm" style="margin-top:10px;">
                                <i class="fas fa-plus"></i> Agregar Vacuna
                            </button>
                        </div>

                        <div>
                            <label class="form-label" style="color:var(--primary-color);">Estudios Complementarios</label>

                            <div id="estudios-container">
                                @if (Model.EstudiosSeleccionadosIds != null)
                                {
                                    foreach (var idSeleccionado in Model.EstudiosSeleccionadosIds)
                                    {
                                        <div class="dynamic-item v1-input-dynamic-group row-item">
                                            <select name="EstudiosSeleccionadosIds" class="form-control">
                                                @if (Model.EstudiosDisponibles != null)
                                                {
                                                    foreach (var item in Model.EstudiosDisponibles)
                                                    {
                                                        if (item.Value == idSeleccionado.ToString())
                                                        {
                                                            <option value="@item.Value" selected>@item.Text</option>
                                                        }
                                                        else
                                                        {
                                                            <option value="@item.Value">@item.Text</option>
                                                        }
                                                    }
                                                }
                                            </select>
                                            <button type="button" class="btn-remove-item v1-btn-remove" onclick="eliminarFila(this)">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    }
                                }
                            </div>

                            <button type="button" id="btn-add-estudio" class="btn btn-outline btn-sm" style="margin-top:10px;">
                                <i class="fas fa-plus"></i> Agregar Estudio
                            </button>
                        </div>
                    </div>
                </div>

                <hr style="border-color:var(--border-light); margin:40px 0;">

                <div style="margin-bottom:30px;">
                    <label for="motivoCambio" class="form-label label-danger-zone">
                        <i class="fa-solid fa-comment-dots"></i> ¿Por qué se realiza este cambio? (Obligatorio)
                    </label>
                    <input type="text" name="motivoCambio" id="motivoCambio" class="form-control input-danger-zone"
                           placeholder="Ej: Error de tipeo en la dosis, Corrección de diagnóstico..." required />
                </div>

                <div class="form-actions" style="display:flex; justify-content:flex-end; gap:15px;">
                    <a asp-controller="HistoriaClinica" asp-action="DetalleHistoriaClinica" asp-route-mascotaId="@Model.MascotaId" class="btn btn-outline">
                        <i class="fa-solid fa-arrow-left"></i> Volver Atrás
                    </a>
                    <button type="submit" class="btn-save-changes">
                        <i class="fa-solid fa-floppy-disk"></i> Guardar Corrección
                    </button>
                </div>

            </form>
        </section>
    </main>

    <footer class="main-footer">
        <div class="footer-col footer-info">
            <div class="footer-logo-container">
                <div class="footer-logo-icon"><i class="fa-solid fa-paw"></i></div>
                <h3 class="footer-brand">VetIng</h3>
            </div>
            <p class="footer-description">
                Portal exclusivo para el personal médico. Gestión eficiente de pacientes y turnos.
            </p>
        </div>

        <div class="footer-col">
            <h4 class="footer-heading">Navegacion</h4>
            <ul class="footer-links">
                <li><a href="/@controllerDestino/PaginaPrincipal">Volver al inicio</a></li>
            </ul>
        </div>

        <div class="footer-col">
            <h4 class="footer-heading">Soporte Técnico</h4>
            <ul class="footer-links">
                <li><a href="mailto:admin@veting.com">Contactar Admin</a></li>
                <li>
                    <form asp-controller="Account" asp-action="Logout" method="post" style="display:inline;">
                        <button type="submit" style="background:none; border:none; color:rgba(255,255,255,0.7); cursor:pointer; font-family:inherit; font-size:0.95em; padding:0; text-decoration:underline;">
                            Cerrar Sesión
                        </button>
                    </form>
                </li>
            </ul>
        </div>

        <div class="footer-bottom">
            <p>&copy; @DateTime.Now.Year VetIng Software. Desarrollado por Ulises Sosa y Leonel Gallaretto.</p>
        </div>
    </footer>

    <template id="template-vacuna">
        <div class="dynamic-item v1-input-dynamic-group row-item">
            <select name="VacunasSeleccionadasIds" class="form-control" required>
                <option value="">-- Seleccione Vacuna --</option>
                @if (Model.VacunasDisponibles != null)
                {
                    foreach (var item in Model.VacunasDisponibles)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                }
            </select>
            <button type="button" class="btn-remove-item v1-btn-remove" onclick="eliminarFila(this)">
                <i class="fas fa-trash"></i>
            </button>
        </div>
    </template>

    <template id="template-estudio">
        <div class="dynamic-item v1-input-dynamic-group row-item">
            <select name="EstudiosSeleccionadosIds" class="form-control" required>
                <option value="">-- Seleccione Estudio --</option>
                @if (Model.EstudiosDisponibles != null)
                {
                    foreach (var item in Model.EstudiosDisponibles)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                }
            </select>
            <button type="button" class="btn-remove-item v1-btn-remove" onclick="eliminarFila(this)">
                <i class="fas fa-trash"></i>
            </button>
        </div>
    </template>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/menuhamburguesa.js" asp-append-version="true"></script>

    <script>
        // Menú Hamburguesa
        const burger = document.getElementById('hamburgerBtn');
        const nav = document.getElementById('navMenu');
        if(burger && nav){
            burger.addEventListener('click', () => nav.classList.toggle('active'));
        }

        // JS Básico para filas dinámicas (sin archivo externo para evitar caché)
        document.getElementById('btn-add-vacuna').addEventListener('click', function () {
            var template = document.getElementById('template-vacuna');
            if (template) {
                var clone = template.content.cloneNode(true);
                document.getElementById('vacunas-container').appendChild(clone);
            }
        });

        document.getElementById('btn-add-estudio').addEventListener('click', function () {
            var template = document.getElementById('template-estudio');
            if (template) {
                var clone = template.content.cloneNode(true);
                document.getElementById('estudios-container').appendChild(clone);
            }
        });

        function eliminarFila(boton) {
            var fila = boton.closest('.dynamic-item') || boton.closest('.row-item');
            if(fila) fila.remove();
        }
    </script>
</body>
</html>