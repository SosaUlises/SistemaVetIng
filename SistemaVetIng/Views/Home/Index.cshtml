@{
    ViewData["Title"] = "VetIng - Software Veterinario";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <link rel="stylesheet" href="~/css/portal-theme.css" asp-append-version="true" />
</head>

<body>
    <header class="main-header">
        <a href="#hero" class="logo">
            <i class="fa-solid fa-paw"></i> VetIng
        </a>
        <nav class="main-nav">
            <ul class="nav-list" id="navMenu">
                <li><a class="nav-link" href="#about">Nosotros</a></li>
                <li><a class="nav-link" href="#features">Funcionalidades</a></li>
                <li><a class="nav-link" href="#contact">Contacto</a></li>

                @if (User.Identity.IsAuthenticated)
                {
                    <li>
                        <form asp-controller="Account" asp-action="Logout" method="post">
                            <button type="submit" class="btn-logout">
                                <i class="fa-solid fa-right-from-bracket"></i> Salir
                            </button>
                        </form>
                    </li>
                }
                else
                {
                    <li>
                        <a asp-controller="Account" asp-action="Login" class="btn btn-sm btn-outline">
                            Iniciar Sesión
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Cliente" asp-action="RegistrarCliente" class="btn btn-sm btn-primary">
                            Registrarse
                        </a>
                    </li>
                }
            </ul>
        </nav>
        <div class="hamburger-menu" id="hamburgerBtn">
            <i class="fa-solid fa-bars"></i>
        </div>
    </header>

    <main>

        <section id="hero" class="landing-hero landing-container">
            <div class="hero-text-content">
                <h1>Software Veterinario <span>Inteligente</span></h1>
                <p>
                    Transforma la gestión de tu clínica con VetIng. Turnos, historias clínicas, reportes y facturación en una plataforma unificada y moderna.
                </p>
                <div style="display:flex; gap:15px; flex-wrap:wrap;">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <a asp-controller="Cliente" asp-action="RegistrarCliente" class="btn btn-primary">
                            Comenzar Ahora
                        </a>
                    }
                    else
                    {
                        <a href="#features" class="btn btn-primary">Explorar Sistema</a>
                    }
                    <a href="#features" class="btn btn-outline">Ver Funcionalidades</a>
                </div>
            </div>

            <div class="hero-img-wrapper">
                <img src="/css/imagenes/hero.jpg" alt="Dashboard VetIng" />
            </div>
        </section>

        <section id="about" class="landing-section">
            <div class="landing-container">
                <div class="split-layout">
                    <div class="image-col">
                        <img src="/css/imagenes/vet-cuidado.jpg" alt="Cuidado veterinario" style="width:100%; border-radius:20px; border:1px solid var(--border-light);">
                    </div>
                    <div class="text-content">
                        <span class="section-tag">Sobre Nosotros</span>
                        <h2 class="section-heading-landing">Pasión por la Salud Animal</h2>
                        <p>
                            En VetIng Software fusionamos tecnología y cuidado veterinario. Entendemos los desafíos diarios de las clínicas y desarrollamos una plataforma intuitiva que optimiza tu gestión.
                        </p>
                        <p>
                            Nuestra misión es liberar a los profesionales de la carga administrativa para que puedan concentrarse en lo más importante: sus pacientes.
                        </p>

                        <div style="display:flex; gap:30px; margin-top:20px;">
                            <div>
                                <h3 style="color:var(--primary-color); font-size:2rem; font-weight:800;">+500</h3>
                                <small style="color:var(--text-muted);">Clínicas</small>
                            </div>
                            <div>
                                <h3 style="color: white; font-size:2rem; font-weight:800;">+10k</h3>
                                <small style="color:var(--text-muted);">Pacientes</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section id="features" class="landing-section" style="background:rgba(0,0,0,0.2);">
            <div class="landing-container">
                <div style="text-align:center; max-width:800px; margin:0 auto;">
                    <span class="section-tag">Características</span>
                    <h2 class="section-heading-landing">Todo lo que necesitas</h2>
                    <p style="color:var(--text-muted); font-size:1.1rem;">
                        Herramientas potentes diseñadas específicamente para el flujo de trabajo veterinario.
                    </p>
                </div>

                <div class="features-grid-landing">

                    <div class="feature-card-landing">
                        <div class="feature-icon-wrapper">
                            <i class="fa-solid fa-calendar-check"></i>
                        </div>
                        <h3>Gestión de Turnos</h3>
                        <p>Agenda inteligente con recordatorios automáticos para reducir el ausentismo.</p>
                    </div>

                    <div class="feature-card-landing">
                        <div class="feature-icon-wrapper">
                            <i class="fa-solid fa-file-medical"></i>
                        </div>
                        <h3>Historia Clínica Digital</h3>
                        <p>Accede al historial completo de tratamientos, vacunas y estudios al instante.</p>
                    </div>

                    <div class="feature-card-landing">
                        <div class="feature-icon-wrapper">
                            <i class="fa-solid fa-chart-line"></i>
                        </div>
                        <h3>Reportes Analíticos</h3>
                        <p>Toma decisiones basadas en datos con dashboards de ingresos y rendimiento.</p>
                    </div>

                    <div class="feature-card-landing">
                        <div class="feature-icon-wrapper">
                            <i class="fa-solid fa-money-bill-wave"></i>
                        </div>
                        <h3>Control de Pagos</h3>
                        <p>Gestiona cobros, métodos de pago y facturación de forma sencilla y segura.</p>
                    </div>

                    <div class="feature-card-landing">
                        <div class="feature-icon-wrapper">
                            <i class="fa-solid fa-microchip"></i>
                        </div>
                        <h3>Control de Chips</h3>
                        <p>Registro especial para razas y control de identificación por microchip.</p>
                    </div>

                    <div class="feature-card-landing">
                        <div class="feature-icon-wrapper">
                            <i class="fa-solid fa-mobile-screen"></i>
                        </div>
                        <h3>Portal Pacientes</h3>
                        <p>Tus clientes pueden reservar turnos y ver el historial de sus mascotas online.</p>
                    </div>

                </div>
            </div>
        </section>

    </main>

    <footer id="contact" class="main-footer">
        <div class="footer-col footer-info">
            <div class="footer-logo-container">
                <i class="fa-solid fa-paw footer-logo-icon"></i>
                <h3 class="footer-brand">VetIng</h3>
            </div>
            <p class="footer-description">Soluciones tecnológicas para un cuidado animal excepcional.</p>
            <div class="footer-social-icons">
                <a href="#"><i class="fa-brands fa-instagram"></i></a>
                <a href="#"><i class="fa-brands fa-facebook-f"></i></a>
                <a href="#"><i class="fa-brands fa-twitter"></i></a>
            </div>
        </div>

        <div class="footer-col">
            <h4 class="footer-heading">Contacto</h4>
            <ul class="footer-links">
                <li><i class="fa-solid fa-envelope icon-text"></i> info@veting.com</li>
                <li><i class="fa-solid fa-phone icon-text"></i> +54 11 1234-5678</li>
                <li><i class="fa-solid fa-location-dot icon-text"></i> Rosario, Argentina</li>
            </ul>
        </div>
        <div class="footer-col">
            <h4 class="footer-heading">Acceso</h4>
            <ul class="footer-links">
                <li><a asp-controller="Account" asp-action="Login">Iniciar Sesión</a></li>
                <li><a asp-controller="Cliente" asp-action="RegistrarCliente">Registrarme</a></li>
            </ul>
        </div>
        <div class="footer-col">
            <h4 class="footer-heading">Legal</h4>
            <ul class="footer-links">
                <li><a href="#">Términos y Condiciones</a></li>
                <li><a href="#">Política de Privacidad</a></li>
                <li><a href="mailto:soporte@veting.com">Contactar Soporte</a></li>
            </ul>
        </div>
        <div class="footer-bottom">
            <p>&copy; @DateTime.Now.Year VetIng Software. Desarrollado por Ulises Sosa y Leonel Gallaretto.</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/menuhamburguesa.js" asp-append-version="true"></script>

    <script>
        const burger = document.getElementById('hamburgerBtn');
        const nav = document.getElementById('navMenu');
        if(burger && nav){
            burger.addEventListener('click', () => nav.classList.toggle('active'));
        }
    </script>
</body>
</html>