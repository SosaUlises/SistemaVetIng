@model SistemaVetIng.ViewsModels.MascotaEditarViewModel

@{
    ViewData["Title"] = "Modificar Mascota - VetIng";
    Layout = null;
    string controllerDestino = User.IsInRole("Veterinario") ? "Veterinario" : "Veterinaria";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="icon" type="image/png" href="/css/imagenes/icon.png" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/themes/dark.css">

    <link rel="stylesheet" href="~/css/portal-theme.css" asp-append-version="true" />
</head>
<body>

    <header class="main-header">
        <a href="/@controllerDestino/PaginaPrincipal" class="logo">
            <i class="fa-solid fa-paw"></i> VetIng
        </a>
        <nav class="main-nav">
            <ul class="nav-list" id="navMenu">
                <li><a class="nav-link" href="/@controllerDestino/PaginaPrincipal">Volver al Inicio</a></li>
                <li>
                    <form asp-controller="Account" asp-action="Logout" method="post">
                        <button type="submit" class="btn-logout">
                            <i class="fa-solid fa-right-from-bracket"></i> Salir
                        </button>
                    </form>
                </li>
            </ul>
        </nav>
        <div class="hamburger-menu" id="hamburgerBtn">
            <i class="fa-solid fa-bars"></i>
        </div>
    </header>

    <main class="main-content">

        <div class="dash-hero">
            <div class="dash-title">
                <h1>Modificar <span>Mascota</span></h1>
                <p class="dash-subtitle">
                    Editando datos de: <strong>@Model.Nombre</strong> Dueño:  <strong>@ViewBag.ClienteNombre</strong>
                </p>
   
            </div>
        </div>

        <section class="booking-container">
            <form asp-controller="Mascota" asp-action="ModificarMascota" method="post">
                @Html.AntiForgeryToken()

                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="ClienteId" />
                <input type="hidden" asp-for="RazaPeligrosa" id="esRazaPeligrosa" />

                <div class="form-group" style="margin-bottom:20px;">
                    <label asp-for="Nombre" class="form-label">Nombre de la Mascota</label>
                    <div style="position:relative;">
                        <i class="fa-solid fa-tag" style="position:absolute; left:15px; top:50%; transform:translateY(-50%); color:var(--primary-color);"></i>
                        <input asp-for="Nombre" class="form-control" placeholder="Nombre de la mascota" style="padding-left:40px;" />
                    </div>
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div style="display:grid; grid-template-columns: 1fr 1fr; gap:20px; margin-bottom:20px;">
                    <div class="form-group">
                        <label asp-for="Especie" class="form-label">Especie</label>
                        <select asp-for="Especie" class="form-control" id="especieMascota">
                            <option value="">-- Seleccione --</option>
                            <option value="Perro">Perro</option>
                            <option value="Gato">Gato</option>
                            <option value="Pájaro">Pájaro</option>
                            <option value="Roedor">Roedor</option>
                            <option value="Reptil">Reptil</option>
                            <option value="Otro">Otro</option>
                        </select>
                        <span asp-validation-for="Especie" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Raza" class="form-label">Raza</label>
                        <input asp-for="Raza" class="form-control" id="razaMascota" placeholder="Ej: Labrador" />
                        <span asp-validation-for="Raza" class="text-danger"></span>
                    </div>
                </div>

                <div style="display:grid; grid-template-columns: 1fr 1fr; gap:20px; margin-bottom:20px;">
                    <div class="form-group">
                        <label asp-for="FechaNacimiento" class="form-label">Fecha de Nacimiento</label>

                        <input type="text" asp-for="FechaNacimiento" id="fechaNacimiento"
                               class="form-control calendar-input-fix"
                               placeholder="Seleccione fecha..." readonly="readonly" />

                        <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Sexo" class="form-label">Sexo</label>
                        <select asp-for="Sexo" class="form-control">
                            <option value="">-- Seleccione --</option>
                            <option value="Macho">Macho</option>
                            <option value="Hembra">Hembra</option>
                            <option value="Desconocido">Desconocido</option>
                        </select>
                        <span asp-validation-for="Sexo" class="text-danger"></span>
                    </div>
                </div>

                <div id="chipGroup" class="hazard-zone">
                    <div class="hazard-header">
                        <i class="fa-solid fa-triangle-exclamation"></i>
                        Raza Considerada Peligrosa
                    </div>

                    <label asp-for="Chip" class="form-label" style="color:white;">¿Posee Microchip?</label>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="tieneChip" asp-for="Chip">
                        <label class="form-check-label" for="tieneChip">Sí, posee chip identificatorio</label>
                    </div>
                </div>

                <div class="form-actions" style="margin-top:30px; display:flex; justify-content:flex-end; gap:15px;">
                    <a asp-controller="Mascota" asp-action="ListarClientes" asp-route-clienteId="@Model.ClienteId" class="btn btn-outline">
                        Cancelar
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fa-solid fa-floppy-disk"></i> Guardar Cambios
                    </button>
                </div>

            </form>
        </section>
    </main>

    <footer class="main-footer">
        <div class="footer-col footer-info">
            <div class="footer-logo-container">
                <div class="footer-logo-icon"><i class="fa-solid fa-paw"></i></div>
                <h3 class="footer-brand">VetIng</h3>
            </div>
            <p class="footer-description">
                Portal exclusivo para el personal médico. Gestión eficiente de pacientes y turnos.
            </p>
        </div>

        <div class="footer-col">
            <h4 class="footer-heading">Navegacion</h4>
            <ul class="footer-links">
                <li><a href="/@controllerDestino/PaginaPrincipal">Volver al inicio</a></li>
            </ul>
        </div>

        <div class="footer-col">
            <h4 class="footer-heading">Soporte Técnico</h4>
            <ul class="footer-links">
                <li><a href="mailto:admin@veting.com">Contactar Admin</a></li>
                <li>
                    <form asp-controller="Account" asp-action="Logout" method="post" style="display:inline;">
                        <button type="submit" style="background:none; border:none; color:rgba(255,255,255,0.7); cursor:pointer; font-family:inherit; font-size:0.95em; padding:0; text-decoration:underline;">
                            Cerrar Sesión
                        </button>
                    </form>
                </li>
            </ul>
        </div>

        <div class="footer-bottom">
            <p>&copy; @DateTime.Now.Year VetIng Software. Desarrollado por Ulises Sosa y Leonel Gallaretto.</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/menuhamburguesa.js" asp-append-version="true"></script>

    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://npmcdn.com/flatpickr/dist/l10n/es.js"></script>
    @await Component.InvokeAsync("NToastNotify")

    <script>
        // Menú móvil
        const burger = document.getElementById('hamburgerBtn');
        const nav = document.getElementById('navMenu');
        if(burger && nav){
            burger.addEventListener('click', () => nav.classList.toggle('active'));
        }

        $(document).ready(function () {

            // INICIALIZAR CALENDARIO
            flatpickr("#fechaNacimiento", {
                locale: "es",
                dateFormat: "Y-m-d",
                altInput: true,
                altFormat: "d/m/Y",
                maxDate: "today",
                disableMobile: "true"
            });

            var vieneConChipDeBD = @(Model.Chip.ToString().ToLower());
            // Lógica de Raza Peligrosa
               function gestionarVisibilidad() {
                var especie = $('#especieMascota').val().toLowerCase();
                var raza = $('#razaMascota').val().toLowerCase().trim();
                var tieneChipVisual = $('#tieneChip').is(':checked');

                var razasPeligrosas = [
                    "pitbull", "rottweiler", "dogo argentino", "fila brasileiro",
                    "akita inu", "tosa inu", "doberman", "staffordshire bull terrier",
                    "american staffordshire terrier", "pastor alemán", "pastor aleman"
                ];

                var esPerro = (especie === "perro");
                var esPeligrosa = esPerro && razasPeligrosas.includes(raza);

                if (esPeligrosa || tieneChipVisual) {
                    $('#chipGroup').slideDown();
                    if(esPeligrosa) $('#esRazaPeligrosa').val('true');
                } else {
                    $('#chipGroup').slideUp();
                    $('#esRazaPeligrosa').val('false');
                    $('#tieneChip').prop('checked', false);
                }
            }

            // Eventos manuales
            $('#especieMascota, #razaMascota').on('change keyup', function () {
                gestionarVisibilidad();
            });
            gestionarVisibilidad();
        });
    </script>
</body>
</html>