@using System.Globalization
@using X.PagedList.Mvc.Core
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService
@inject IHttpContextAccessor HttpContextAccessor
@using SistemaVetIng.Models.Extension
@model SistemaVetIng.ViewsModels.ClientePaginaPrincipalViewModel
@{
    ViewData["Title"] = "VetIng - Portal Cliente";
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
   <link rel="stylesheet" href="~/css/portal-theme.css" asp-append-version="true" />
</head>

<body>
    <header class="main-header">
        <a href="/Cliente/PaginaPrincipal" class="logo">
            <i class="fa-solid fa-paw"></i> VetIng
        </a>

        <nav class="main-nav">
            <ul class="nav-list" id="navMenu">
                <li><a class="nav-link" asp-controller="Perfil" asp-action="Index">Perfil</a></li>
                <li><a class="nav-link" href="#turnos">Turnos</a></li>
                <li><a class="nav-link" href="#mascotas">Mascotas</a></li>
                <li><a class="nav-link" href="#pagos">Pagos</a></li>
                <li>
                    <form asp-controller="Account" asp-action="Logout" method="post">
                        <button type="submit" class="btn-logout">
                            <i class="fa-solid fa-right-from-bracket"></i> Salir
                        </button>
                    </form>
                </li>
            </ul>
        </nav>
        
        <div class="hamburger-menu" id="hamburgerBtn">
            <i class="fa-solid fa-bars"></i>
        </div>
    </header>

    <main class="main-content">

        <section class="dash-hero">
            <div class="dash-title">
                <h1>Bienvenido @Model.NombreCompleto <br><span>VetIng Portal</span></h1>
                <p class="dash-subtitle">Tu espacio personal para gestionar la salud de tus mascotas, turnos y pagos de forma segura.</p>
            </div>
            <div class="dash-actions">
                   @if (HttpContextAccessor.HttpContext.User.HasPermission(Permission.Turnos.Create))
            {
                <a asp-controller="Turno" asp-action="ReservarTurno" class="btn btn-primary">
                    <i class="fa-regular fa-calendar-plus"></i> Nuevo Turno
                </a>
            }
           @if (HttpContextAccessor.HttpContext.User.HasPermission(Permission.Pago.View))
            {
                <a asp-controller="Cliente" asp-action="HistorialPagos" class="btn btn-outline">
                    <i class="fa-solid fa-receipt"></i> Ver Historial de Pagos
                </a>
            }
            </div>
        </section>

        <section class="stats-grid">
            <div class="stat-card">
                <div class="stat-icon"><i class="fa-solid fa-calendar-check"></i></div>
                <div class="stat-value">@Model.CantidadTurnos</div>
                <div class="stat-label">Turnos solicitados</div>
            </div>
            
            <div class="stat-card">
                <div class="stat-icon icon-coral"><i class="fa-solid fa-hourglass-start"></i></div>
                <div class="stat-value">@Model.CantidadTurnosPendientesPorCliente</div>
                <div class="stat-label">Turnos pendientes</div>
            </div>
            
            <div class="stat-card">
                <div class="stat-icon icon-green"><i class="fa-solid fa-dog"></i></div>
                <div class="stat-value">@Model.CantidadMascotasPorCliente</div>
                <div class="stat-label">Mis mascotas</div>
            </div>
            
            <div class="stat-card">
                <div class="stat-icon"><i class="fa-solid fa-credit-card"></i></div>
                <div class="stat-value">@Model.CantidadPagosPendientes</div>
                <div class="stat-label">Pagos a realizar</div>
            </div>
        </section>

        @if (HttpContextAccessor.HttpContext.User.HasPermission(Permission.Turnos.View))
        {
            <section id="turnos">
                <div class="section-header">
                    <h2 class="section-heading">Próximos Turnos</h2>
                    <form asp-action="PaginaPrincipal" method="get" class="search-box">
                        <i class="fa-solid fa-search search-icon"></i>
                        <input type="text" name="busquedaTurno" class="search-input" placeholder="Buscar mascota..." value="@Model.BusquedaTurnoActual" />
                    </form>
                </div>

                <div class="list-container">
                    @if (Model.Turnos != null && Model.Turnos.Any())
                    {
                        foreach (var turno in Model.Turnos)
                        {
                            <div class="list-item @(turno.Estado != "Pendiente" ? "item-inactive" : "")">
                                <div style="display:flex; align-items:center;">
                                    <div class="date-badge">
                                        <div class="date-day">@turno.Fecha.Day</div>
                                        <div class="date-month">@turno.Fecha.ToString("MMM", new CultureInfo("es-ES"))</div>
                                    </div>
                                    
                                    <div class="item-info">
                                        <h4>@(turno.Mascota?.Nombre ?? "Primera Cita")</h4>
                                        <p>
                                            <i class="fa-regular fa-clock" style="color:var(--secondary-color);"></i> @turno.Horario.ToString(@"hh\:mm") hs
                                            &nbsp;|&nbsp; @turno.Motivo
                                        </p>
                                    </div>
                                </div>

                                <div style="display:flex; align-items:center;">
                                    @{
                                        string badgeClass = turno.Estado switch {
                                            "Finalizado" => "badge-success",
                                            "Pendiente" => "badge-pending",
                                            "Cancelado" => "badge-error",
                                            _ => "badge-neutral"
                                        };
                                    }
                                    <span class="badge @badgeClass">@turno.Estado</span>

                                    @if (turno.Estado == "Pendiente" && HttpContextAccessor.HttpContext.User.HasPermission(Permission.Turnos.Cancel))
                                    {
                                        <form asp-controller="Turno" asp-action="CancelarTurnoCliente" method="post" onsubmit="return confirm('¿Deseas cancelar este turno?');">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="turnoId" value="@turno.Id" />
                                            <button type="submit" class="btn-cancel">
                                                <i class="fa-solid fa-ban"></i> Cancelar
                                            </button>
                                        </form>
                                    }
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                         <div style="padding:40px; text-align:center; color:var(--text-muted);">
                            <i class="fa-regular fa-calendar-xmark" style="font-size:2em; margin-bottom:15px; display:block;"></i>
                            No hay turnos registrados.
                        </div>
                    }

                    <div class="pagination-wrapper">
                        @if (Model.PaginacionTurnos != null && Model.PaginacionTurnos.PageCount > 1)
                        {
                            @Html.PagedListPager(Model.PaginacionTurnos, page => Url.Action("PaginaPrincipal",
                                new { page, busquedaTurno = Model.BusquedaTurnoActual }),
                                new PagedListRenderOptions {
                                    LiElementClasses = new string[] { "page-item" },
                                    PageClasses = new string[] { "page-link" },
                                    ContainerDivClasses = new[] { "pagination" },
                                    DisplayLinkToFirstPage = PagedListDisplayMode.Never,
                                    DisplayLinkToLastPage = PagedListDisplayMode.Never
                                })
                        }
                    </div>
                </div>
            </section>
        }

        <br><br>

        <div style="display:grid; grid-template-columns: repeat(auto-fit, minmax(350px, 1fr)); gap:40px;">
            
            @if (HttpContextAccessor.HttpContext.User.HasPermission(Permission.Mascota.View))
            {
            <section id="mascotas">
                <div class="section-header">
                    <h2 class="section-heading">Mis Mascotas</h2>
                </div>
                <div class="list-container">
                     @if (Model.Mascotas != null && Model.Mascotas.Any())
                    {
                        foreach (var mascota in Model.Mascotas)
                        {
                            <div class="list-item">
                                <div style="display:flex; align-items:center; gap:15px;">
                                    <div style="width:40px; height:40px; background:#333; border-radius:50%; display:flex; align-items:center; justify-content:center; color:var(--secondary-color);">
                                        <i class="fa-solid fa-paw"></i>
                                    </div>
                                    <div class="item-info">
                                        <h4>@mascota.NombreMascota</h4>
                                        <p>@mascota.Especie &bull; @mascota.Raza</p>
                                    </div>
                                </div>
                          @if (HttpContextAccessor.HttpContext.User.HasPermission(Permission.Atenciones.View))
                                {
                                <a asp-controller="Mascota" asp-action="Detalle" asp-route-id="@mascota.Id" class="btn btn-outline btn-sm">
                                    Ver
                                </a>
                                }
                            </div>
                        }
                    }
                    else
                    {
                        <div style="padding:30px; text-align:center; color:var(--text-muted);">Sin mascotas.</div>
                    }
                </div>
            </section>
            }

            @if (HttpContextAccessor.HttpContext.User.HasPermission(Permission.Pago.View))
            {
            <section id="pagos">
                <div class="section-header">
                    <h2 class="section-heading">Pagos Pendientes</h2>
                </div>
                <div class="list-container">
                    <form id="form-pagos">
                        @Html.AntiForgeryToken()
                        <div style="max-height:300px; overflow-y:auto;">
                            @if (Model.PagosPendientes != null && Model.PagosPendientes.Any(p => p.EstadoDePago == "Pendiente"))
                            {
                                foreach (var pago in Model.PagosPendientes.Where(p => p.EstadoDePago == "Pendiente"))
                                {
                                    <div class="list-item">
                                        <div style="display:flex; align-items:center; gap:15px;">
                                            <input type="checkbox" class="checkbox-custom chk-pago" value="@pago.AtencionId" data-monto="@pago.CostoTotal.ToString(CultureInfo.InvariantCulture)" />
                                            <div class="item-info">
                                                <h4>@pago.MascotaNombre</h4>
                                                <p>@pago.Fecha.ToShortDateString()</p>
                                            </div>
                                        </div>
                                        <div style="font-weight:bold; color:var(--secondary-color);">
                                            @pago.CostoTotal.ToString("C", new CultureInfo("es-AR"))
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                 <div style="padding:30px; text-align:center;">
                                    <i class="fa-solid fa-check-circle" style="color:var(--success-color); font-size:2em; margin-bottom:10px;"></i>
                                    <p style="color:var(--text-muted);">Estás al día.</p>
                                </div>
                            }
                        </div>

                        @if (Model.PagosPendientes != null && Model.PagosPendientes.Any(p => p.EstadoDePago == "Pendiente"))
                        {
                            <div class="payments-footer">
                                <div class="total-display">Total: <span id="total-a-pagar">$0.00</span></div>
                                <button type="submit" id="btn-pagar-seleccionados" class="btn btn-primary btn-sm">
                                    Pagar
                                </button>
                            </div>
                        }
                    </form>
                </div>
            </section>
            }
        </div>

    </main>

   <footer class="main-footer">
    <div class="footer-col footer-info">
        <div class="footer-logo-container">
            <div class="footer-logo-icon"><i class="fa-solid fa-paw"></i></div>
            <h3 class="footer-brand">VetIng</h3>
        </div>
        <p class="footer-description">
            Cuidado profesional para tus mascotas. Tecnología y salud unidas para su bienestar.
        </p>
        <div class="footer-social-icons">
            <a href="#"><i class="fa-brands fa-whatsapp"></i></a>
            <a href="#"><i class="fa-brands fa-instagram"></i></a>
            <a href="#"><i class="fa-brands fa-facebook-f"></i></a>
        </div>
    </div>

      <div class="footer-col">
            <h4 class="footer-heading">Contacto</h4>
            <ul class="footer-links">
                <li><i class="fa-solid fa-envelope icon-text"></i> info@veting.com</li>
                <li><i class="fa-solid fa-phone icon-text"></i> +54 11 1234-5678</li>
                <li><i class="fa-solid fa-location-dot icon-text"></i> Rosario, Argentina</li>
            </ul>
        </div>

    <div class="footer-col">
        <h4 class="footer-heading">Mi Cuenta</h4>
        <ul class="footer-links">
            @if (HttpContextAccessor.HttpContext.User.HasPermission(Permission.Turnos.Create))
            {
                    <li><a asp-controller="Turno" asp-action="ReservarTurno">Reservar Nuevo Turno</a></li>
                }
            <li><a asp-controller="Perfil" asp-action="Index">Mi Perfil</a></li>
            <li><a href="#mascotas">Ver mis Mascotas</a></li>
            <li><a href="#pagos">Pagos Pendientes</a></li>
        </ul>
    </div>

    <div class="footer-col">
        <h4 class="footer-heading">Ayuda</h4>
        <ul class="footer-links">
            <li><a href="mailto:soporte@veting.com">Contactar Soporte</a></li>
            <li><a href="#">Términos y Condiciones</a></li>
            <li>
                <form asp-controller="Account" asp-action="Logout" method="post" style="display:inline;">
                    <button type="submit" style="background:none; border:none; color:rgba(255,255,255,0.7); cursor:pointer; font-family:inherit; font-size:0.95em; padding:0; text-decoration:underline;">
                        Cerrar Sesión
                    </button>
                </form>
            </li>
        </ul>
    </div>

    <div class="footer-bottom">
        <p>&copy; @DateTime.Now.Year VetIng Software. Desarrollado por Ulises Sosa y Leonel Gallaretto.</p>
    </div>
</footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/menuhamburguesa.js" asp-append-version="true"></script>
    <script src="~/js/pagos.js" asp-append-version="true"></script>
    @await Component.InvokeAsync("NToastNotify")

    <script>
        // Lógica básica para el menu hamburguesa
        const burger = document.getElementById('hamburgerBtn');
        const navList = document.getElementById('navMenu');
        if(burger){
            burger.addEventListener('click', () => {
                navList.classList.toggle('active');
            });
        }
    </script>
</body>
</html>